<%= flash[:warning]%>

<%= form_for @user do |form| %>
  <%= form.label :username %>
  <%= form.text_field :username, :required => true%> 
  <%= form.label :full_name %>
  <%= form.text_field :full_name, :required => true%>
  <%= form.label :email %>
  <%= form.text_field :email, :required => true %>
  <%= form.label :password %>
  <%= form.password_field :password_digest, :required => true %>

  <%= form.submit "Sign up" %>
<% end %>


